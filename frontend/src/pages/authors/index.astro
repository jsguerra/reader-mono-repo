---
import Layout from "@layout/Layout.astro";
import Grid from "@components/Grid/Grid.astro";
import Figure from "@components/figure/Figure.astro";
import { siteURL, serverURL } from "@common/common";
import type { Author } from "@common/common";

const response = await fetch(`${serverURL}/authors`);
const authors = await response.json();
---

<Layout>
  <div class="container container-variant">
    <h1>List of Authors</h1>
    <div class="meta">
      <p>Total authors: {authors.length}</p>
      <p>Page 1 of 2</p>
    </div>
  </div>
  <Grid toggle={false}>
    {authors.length <= 0 && <p>There are currently no authors in the library.</p>}
    {
      authors.map((author: Author) => {
        const authorPath = author.name.charAt(0).toLowerCase();
        return (
          <a href={`${siteURL}/authors/${author.id}`}>
            <Figure
              imageUrl={`${serverURL}/books/${authorPath}/${author.slug}/${author.thumbnail}`}
              title={author.name}
            />
          </a>
        );
      })
    }
  </Grid>
  <p>Should show a list of Authors, have pagination and an alphanumeric filter.</p>
</Layout>
